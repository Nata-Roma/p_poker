{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    // "types": ["@types/jest"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": { //alias pathing for absolute paths
      "@src/*": ["src/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@/components/*": ["components/*"],     
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js"],
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js", "setupTests.js"], */
  "exclude": ["node_modules"]
}
